<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPatientDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <!--first name-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/firstNameLabel"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/first_name"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtFirstName"
        app:layout_constraintStart_toStartOf="@+id/edtFirstName"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtFirstName"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:hint="@string/first_name"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:maxLength="@integer/int_20"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFirstNameError"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_first_name"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtFirstName"
        app:layout_constraintStart_toStartOf="@+id/edtFirstName"
        app:layout_constraintTop_toBottomOf="@+id/edtFirstName"
        tools:visibility="visible" />

    <!--lastname-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLastName"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/last_name"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstNameError"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtLastName"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="8dp"
        android:hint="@string/last_name"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:maxLength="@integer/int_20"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLastName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrorLastName"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_valid_last_name"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtLastName"
        app:layout_constraintStart_toStartOf="@+id/edtLastName"
        app:layout_constraintTop_toBottomOf="@+id/edtLastName"
        tools:visibility="visible" />


    <!--age-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtAge"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/age"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtAge"
        app:layout_constraintStart_toStartOf="@+id/edtAge"
        app:layout_constraintTop_toBottomOf="@id/tvErrorLastName"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtAge"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:hint="@string/age"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="@integer/int_3"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toStartOf="@+id/edtWeight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrieAgeWeightLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAgeError"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_age"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtAge"
        app:layout_constraintStart_toStartOf="@+id/edtAge"
        app:layout_constraintTop_toBottomOf="@+id/edtAge"
        tools:visibility="visible" />

    <!--weight-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWeight"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/weight_in_lbs"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edtWeight"
        app:layout_constraintTop_toTopOf="@+id/txtAge"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrieAgeWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvWeight,txtAge"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="35dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtWeight"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:hint="@string/weight_in_lbs"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:maxLength="@integer/int_3"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtAge"
        app:layout_constraintTop_toBottomOf="@+id/barrieAgeWeightLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWeightError"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_weight"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtWeight"
        app:layout_constraintStart_toStartOf="@+id/edtWeight"
        app:layout_constraintTop_toBottomOf="@+id/edtWeight"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrieAgeWeightError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvWeightError,tvAgeError"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="35dp" />

    <!--height-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtHeightAilment"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/height_in_centimeter"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtHeightAilment"
        app:layout_constraintStart_toStartOf="@+id/edtAge"
        app:layout_constraintTop_toBottomOf="@id/barrieAgeWeightError"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtHeightAilment"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="4dp"
        android:hint="@string/height_in_centimeter"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:maxLength="@integer/int_3"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toStartOf="@+id/edtHeartRateAilment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrierheightHeartrateLabelAilment" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeightErorAilment"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_weight"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtHeightAilment"
        app:layout_constraintStart_toStartOf="@+id/edtHeightAilment"
        app:layout_constraintTop_toBottomOf="@+id/edtHeightAilment"
        tools:visibility="visible" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierheightHeartrateLabelAilment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="txtHeightAilment,txtHeartRateAilment"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="35dp" />

    <!--heartRate-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtHeartRateAilment"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/heart_rate_bps"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edtHeartRateAilment"
        app:layout_constraintTop_toBottomOf="@id/barrieAgeWeightError"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtHeartRateAilment"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="4dp"
        android:hint="@string/heart_rate_bps"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:maxLength="@integer/int_3"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtHeightAilment"
        app:layout_constraintTop_toTopOf="@+id/edtHeightAilment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHearRateErorAilment"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/enter_heart_rate"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtHeartRateAilment"
        app:layout_constraintTop_toBottomOf="@+id/edtHeartRateAilment"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrieHeightHearRateError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvHeightErorAilment,tvHearRateErorAilment"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="35dp" />


    <!--active energy-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEnergyLabel"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/active_energy_in_kcal"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtFirstName"
        app:layout_constraintStart_toStartOf="@+id/edtFirstName"
        app:layout_constraintTop_toBottomOf="@id/barrieHeightHearRateError"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtEnergy"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:hint="@string/active_energy_in_kcal"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:maxLength="@integer/int_20"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEnergyLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrorEnergy"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_energy"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtEnergy"
        app:layout_constraintStart_toStartOf="@+id/edtEnergy"
        app:layout_constraintTop_toBottomOf="@+id/edtEnergy"
        tools:visibility="visible" />

    <!--Ailment-->


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAilment2"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/ailment_lowercap"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtFirstName"
        app:layout_constraintStart_toStartOf="@+id/edtFirstName"
        app:layout_constraintTop_toBottomOf="@id/tvErrorEnergy"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtAilment"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:hint="@string/ailment_lowercap"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:maxLength="@integer/int_20"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAilment2" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrorAilment"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_ailment"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtAilment"
        app:layout_constraintStart_toStartOf="@+id/edtAilment"
        app:layout_constraintTop_toBottomOf="@+id/edtAilment"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>