<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/step_view"
        layout="@layout/include_step_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitleMediciene"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/search_medicine"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_view"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtMedicineSearch"
        style="@style/BaseAppTheme.EdtTxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="16dp"
        android:hint="@string/search_medicine"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:maxLength="@integer/int_20"
        android:maxLines="@integer/int_1"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleMediciene" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSearchMedError"
        style="@style/BaseAppTheme.TxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/enter_weight"
        android:textColor="@color/red_validation"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtMedicineSearch"
        app:layout_constraintStart_toStartOf="@+id/edtMedicineSearch"
        app:layout_constraintTop_toBottomOf="@+id/edtMedicineSearch"
        tools:visibility="visible" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardViewImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/materialCardViewSpeech"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edtMedicineSearch"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchMedError" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_via_image" />

            <TextView
                android:id="@+id/textView2"
                android:textStyle="bold"
                style="@style/BaseAppTheme.TxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/add_via_image" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardViewSpeech"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:layout_marginEnd="16dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/materialCardViewImage"
        app:layout_constraintTop_toTopOf="@+id/materialCardViewImage" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_via_speech" />

            <TextView
                android:textStyle="bold"
                style="@style/BaseAppTheme.TxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/add_via_speech" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/cvDiagnosisBottomContainer"
        layout="@layout/include_diagnosis_bottom_views"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scrollViewStep1"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewAddMed"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="0dp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/edtMedicineSearch"
        app:layout_constraintEnd_toEndOf="@+id/edtMedicineSearch"
        app:layout_constraintTop_toTopOf="@+id/edtMedicineSearch"
        app:srcCompat="@drawable/ic_add_black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclarAddedMed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cvDiagnosisBottomContainer"
        app:layout_constraintEnd_toEndOf="@+id/materialCardViewSpeech"
        app:layout_constraintStart_toStartOf="@+id/materialCardViewImage"
        app:layout_constraintTop_toBottomOf="@+id/materialCardViewImage" />

</androidx.constraintlayout.widget.ConstraintLayout>