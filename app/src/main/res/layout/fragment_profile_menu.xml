<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="@integer/int_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <include
                        android:id="@+id/headerView"
                        layout="@layout/toolbar" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/profileInfoContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline"
                        app:layout_constraintEnd_toEndOf="@+id/verticalRightGuideline"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@+id/headerView">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgCurrency"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:src="@drawable/ic_place_holder_profile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtUserName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/nunito_extrabold"
                            tools:text="Name"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintHorizontal_weight="@integer/int_4"
                            app:layout_constraintStart_toEndOf="@+id/imgCurrency"
                            app:layout_constraintTop_toTopOf="@+id/imgCurrency" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtUserId"
                            style="@style/BaseAppTheme.TxtView"
                            android:textSize="@dimen/_10ssp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="\ufeff@bernie"
                            android:includeFontPadding="false"
                            android:layout_marginStart="@dimen/_13sdp"
                            app:layout_constraintStart_toEndOf="@+id/imgCurrency"
                            app:layout_constraintTop_toBottomOf="@+id/txtUserName"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtMenuTitle"
                        style="@style/BaseAppTheme.TxtView"
                        android:textSize="@dimen/_11ssp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/menu"
                        android:layout_marginTop="@dimen/_19sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:layout_constraintTop_toBottomOf="@+id/profileInfoContainer"
                        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/settingContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:layout_constraintEnd_toEndOf="@+id/verticalRightGuideline"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline"
                        app:layout_constraintTop_toBottomOf="@+id/txtMenuTitle">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgSearchUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_set_as"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:fontFamily="@font/nunito_extrabold"
                            android:text="@string/setting"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imgSearchUser"
                            app:layout_constraintTop_toTopOf="@+id/imgSearchUser" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <include layout="@layout/guideline_left" />
                    <include layout="@layout/guideline_right" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>