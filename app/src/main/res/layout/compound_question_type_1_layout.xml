<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvQuestonNo"
                style="@style/BaseAppTheme.TxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_bold"
                android:text="(1). "
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvQuestion"
                style="@style/BaseAppTheme.TxtView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunito_bold"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvQuestonNo"
                app:layout_constraintTop_toTopOf="@+id/tvQuestonNo"
                app:layout_goneMarginStart="16dp"
                app:layout_goneMarginTop="16dp"
                tools:text="There are diffrent types of heart failure,one related to a weak heart, and the other related to a stiff heart.Both can manifest similarly, but their management can be significantly different." />

            <RadioGroup
                android:id="@+id/radioGroupQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/tvQuestion"
                app:layout_constraintStart_toStartOf="@+id/tvQuestion"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestion">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOption1"
                    style="@style/BaseAppTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/yes" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOption2"
                    style="@style/BaseAppTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/no" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOption3"
                    style="@style/BaseAppTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Unknown" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvLeadsLabel"
                style="@style/BaseAppTheme.TxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/leads"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/radioGroupQuestion"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupQuestion"
                tools:visibility="visible" />

            <RadioGroup
                android:id="@+id/rbGroupLeads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/tvLeadsLabel"
                app:layout_constraintTop_toBottomOf="@+id/tvLeadsLabel"
                tools:visibility="visible">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbLead3"
                    style="@style/BaseAppTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Leads" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbLead2"
                    style="@style/BaseAppTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Leads or Less" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbUnknown"
                    style="@style/BaseAppTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="unknown" />
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
