<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.healthlogs.HealthLogsActivity">

    <include
        android:id="@+id/headerView"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/clHealthDetail"
        layout="@layout/include_health_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectedDate" />

    <com.cardio.doctor.ui.common.customviews.AppButton
        android:id="@+id/btSaveLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@+id/clHealthDetail"
        app:layout_constraintStart_toStartOf="@+id/clHealthDetail"
        app:layout_constraintTop_toBottomOf="@+id/clHealthDetail" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/BaseAppTheme.TxtView"
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/select_date"
        app:layout_constraintStart_toStartOf="@+id/clHealthDetail"
        app:layout_constraintTop_toBottomOf="@id/headerView"
         />


</androidx.constraintlayout.widget.ConstraintLayout>