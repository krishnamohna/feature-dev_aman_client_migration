<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph_authenticate_user"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.cardio.doctor.ui.fragment.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/loginToSignUp"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"
            />
        <action
            android:id="@+id/loginToPhoneVerification"
            app:destination="@id/phoneNumberVerificationFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"
            />
        <action
            android:id="@+id/loginToForgotPassword"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"
            />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.cardio.doctor.ui.fragment.signup.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/signup_to_phone_verification"
            app:destination="@id/phoneNumberVerificationFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"
            />
        <action
            android:id="@+id/signupToWebView"
            app:destination="@id/webViewFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/phoneNumberVerificationFragment"
        android:name="com.cardio.doctor.ui.fragment.phone_verification.PhoneNumberVerificationFragment"
        android:label="PhoneNumberVerificationFragment" >
        <argument
            android:name="phoneVerificationDetail"
            app:argType="com.cardio.doctor.model.request.PhoneVerificationDetails"
            app:nullable="true" />
        <argument
            android:name="isComingFrom"
            app:argType="integer"
            android:defaultValue="1" />
        <action
            android:id="@+id/phoneVerificationToLoginScreen"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/in_from_left"
            app:exitAnim="@anim/out_to_right"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.cardio.doctor.ui.fragment.forgot_password.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.cardio.doctor.ui.fragment.profile.web_view.WebViewFragment"
        android:label="WebViewFragment">
        <argument
            android:name="toolBarTitle"
            app:argType="string"
            app:nullable="true" />
        <argument android:name="webUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>