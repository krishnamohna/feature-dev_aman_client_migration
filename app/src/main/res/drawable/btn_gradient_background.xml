<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/ripple_icon_state_pressed">
<item android:id="@android:id/mask">
    <shape android:shape="rectangle">
        <solid android:color="@color/ripple_icon_state_pressed" />
        <corners android:radius="@dimen/_16sdp" />
    </shape>
</item>

<item android:id="@android:id/background">
    <shape android:shape="rectangle">
        <gradient
            android:angle="90"
            android:endColor="@color/btn_gradient_end"
            android:startColor="@color/btn_gradient_start"
            android:type="linear" />
        <corners android:radius="@dimen/_16sdp" />
    </shape>
</item>
</ripple>


