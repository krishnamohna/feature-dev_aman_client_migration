<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_icon_state_pressed">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/ripple_icon_state_pressed" />
            <corners android:radius="@dimen/default_button_corner_radius" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                android:angle="270"
                android:endColor="@color/btn_gradient_start"
                android:startColor="@color/btn_gradient_end" />
        </shape>

    </item>
</ripple>