<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_icon_state_pressed">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/ripple_icon_state_pressed" />
            <corners android:radius="@dimen/default_button_corner_radius" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/grey_bg" />
            <corners android:radius="@dimen/_16sdp" />
        </shape>
    </item>
</ripple>


