<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="buttonDefaultStyle">@style/ButtonDefaultStyle</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorOnBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/black_tutorial_text</item>
        <item name="android:windowBackground">@drawable/app_gradient_background</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/btn_gradient_start</item>
        <item name="colorControlActivated">@color/btn_gradient_start</item>
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/ripple_icon_state_pressed</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>
     <!--for defualt app button-->
    <style name="ButtonDefaultStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gradient_background</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
    </style>

    <style name="BaseAppTheme.btnStyleContinue" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_gradient_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>
     <!--for default edittextviews-->
    <style name="BaseAppTheme.EdtTxt">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_text_hint</item>
        <item name="android:background">@drawable/edt_rounded_corner</item>
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:paddingRight">@dimen/_16sdp</item>
    </style>
    <!--for default textview-->
    <style name="BaseAppTheme.TxtView">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseAppTheme.TxtView.bold" parent="BaseAppTheme.TxtView">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>
    <style name="BaseAppTheme.TxtView.semiBold" parent="BaseAppTheme.TxtView">
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>
    <!--textView for medication none
    <style name="BaseAppTheme.TxtView.bold.medication.none" parent="BaseAppTheme.TxtView.bold">
        <item name="android:paddingStart">@dimen/_16sdp</item>/>
        <item name="android:paddingEnd">@dimen/_16sdp</item>/>
        <item name="android:layout_height">@dimen/medicine_height</item>/>
        <item name="android:gravity">center</item>/>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_color_accent_background</item>/>
    </style>-->

    <!--textView for medication none-->
    <style name="BaseAppTheme.TxtView.bold.medication.none" parent="BaseAppTheme.TxtView.bold">
        <item name="android:paddingStart">@dimen/_16sdp</item>/>
        <item name="android:paddingEnd">@dimen/_16sdp</item>/>
        <item name="android:paddingTop">2dp</item>/>
        <item name="android:paddingBottom">2dp</item>/>
        <item name="android:minHeight">@dimen/medicine_height</item>/>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_color_red_background</item>/>
    </style>
    <!--textView for medication selected-->
    <style name="BaseAppTheme.TxtView.bold.medication" parent="BaseAppTheme.TxtView.bold.medication.none">
        <item name="android:background">@drawable/btn_color_primary_background</item>/>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="textStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--For showing transparent background of progress bar-->
    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomAlertDialogCommon" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/grey_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black_tutorial_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StepView">
        <item name="sv_selectedCircleColor">@color/stepview_circle_selected</item>
        <item name="sv_selectedCircleRadius">14dp</item>
        <item name="sv_selectedTextColor">@color/stepview_text_selected</item>
        <item name="sv_selectedStepNumberColor">@color/stepview_selected_number</item>
        <item name="sv_stepNumberTextSize">12sp</item>
        <item name="sv_doneStepMarkColor">@color/stepview_mark</item>
        <item name="sv_doneCircleColor">@color/stepview_circle_done</item>
        <item name="sv_doneCircleRadius">14dp</item>
        <item name="sv_doneTextColor">@color/stepview_text_done</item>
        <item name="sv_nextTextColor">@color/stepview_text_next</item>
        <item name="sv_nextStepLineColor">@color/stepview_line_next</item>
        <item name="sv_doneStepLineColor">@color/stepview_line_done</item>
        <item name="sv_stepPadding">12dp</item>
        <item name="sv_textPadding">12dp</item>
        <item name="sv_stepLineWidth">0.5dp</item>
        <item name="sv_animationDuration">200</item>
        <item name="sv_textSize">14sp</item>
        <item name="sv_animationType">Line</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--alert dialog theme -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Title.Text.Body</item>
    </style>
    <!--dialog title style-->
    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>
    <!--dialog body style-->
    <style name="MaterialAlertDialog.App.Title.Text.Body" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:maxLines">6</item>
        <item name="android:singleLine">false</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <!--textView for medication selected-->
    <style name="BaseAppTheme.TxtView.bold.medication.other" parent="BaseAppTheme.TxtView.bold.medication.none">
        <item name="android:background">@drawable/btn_color_primary_background</item>/>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>